<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DesignActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="drawerArrowStyle">@style/Design.DrawerArrowStyle</item>
        <item name="android:preferenceStyle">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Design" parent="DesignActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Design.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Design.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="Design.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Design.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
