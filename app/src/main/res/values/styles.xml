<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="NumberViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/glacial_indifference_regular</item>
    </style>

    <style name="LargeNumberViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/glacial_indifference_regular</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="Design.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Design.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="ThemeLight.Cyan.500.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeLight.Cyan.500.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
