<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/menu_item_size"
    android:layout_height="@dimen/menu_item_size"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/birthday_cheer_animation_wrapper"
        android:layout_width="@dimen/menu_wrapper_size"
        android:layout_height="@dimen/menu_wrapper_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cheer" />

    </RelativeLayout>

</RelativeLayout>
